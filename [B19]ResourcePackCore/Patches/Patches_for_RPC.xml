	<!--=============== 土と土採集場に採集レシピ追加 ====================-->
<!--土関係だけは開発者全員が使用するのでデフォで記述してあります。土を使わないという方は消してください。-->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="RPC_Dirt"]/thingCategories/text()</xpath>
    <value>
      <li>ResourcesRaw</li>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="RPC_GatheringSpot_Dirt"]/recipeUsers/text()</xpath>
    <value>
      <li>RPC_GatheringSpot_Dirt</li>	  
    </value>
  </Operation>

