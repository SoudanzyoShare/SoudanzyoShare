<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>RPC_GatheringSpot_Dirt</defName>
    <label>dirt gathering spot</label>
    <description>A place for gathering dirt.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/GatheringSpot_Dirt/GatheringSpot_Dirt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
      <drawRotated>false</drawRotated>
    </graphicData>
    <uiIconPath>Things/Building/GatheringSpot_Dirt/GatheringSpot_DirtUI</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <WorkToBuild>0</WorkToBuild>
      <WorkTableWorkSpeedFactor>0.5</WorkTableWorkSpeedFactor>
    </statBases>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <useHitPoints>false</useHitPoints>
    <size>(1,1)</size>
    <designationCategory>Production</designationCategory>
    <passability>Standable</passability>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <workSpeedPenaltyOutdoors>false</workSpeedPenaltyOutdoors>
      <workSpeedPenaltyTemperature>false</workSpeedPenaltyTemperature>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <sowTag>SupportPlantsOnly</sowTag>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>

        </linkableFacilities>
      </li>
      <li>
        <compClass>CompReportWorkSpeed</compClass>
      </li>
    </comps>
    <designationHotKey>Misc1</designationHotKey>
    <placeWorkers>

      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_ReportWorkSpeedPenalties</li>
    </placeWorkers>
    <terrainAffordanceNeeded>RPC_DirtGatherable</terrainAffordanceNeeded>
    <designatorDropdown>RPC_Dropdown_GatherSpot</designatorDropdown>
  </ThingDef>
  
