  <!-- ========== 土採集 ========== -->
  <WorkGiverDef>
    <defName>DoBillsUseRPC_GatheringSpot_Dirt</defName>
    <label>gather dirt from the soil</label>
    <giverClass>WorkGiver_DoBill</giverClass>
    <workType>Mining</workType>
    <priorityInType>120</priorityInType>
    <fixedBillGiverDefs>
      <li>RPC_GatheringSpot_Dirt</li>
      <li>RPC_GatheringSpot_Mud</li>
    </fixedBillGiverDefs>
    <verb>mine</verb>
    <gerund>gathering at</gerund>
    <tagToGive>Fieldwork</tagToGive>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
    <prioritizeSustains>true</prioritizeSustains>
  </WorkGiverDef>

